<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Servlets configurations -->
    <servlet>
        <servlet-name>IncludableServlet</servlet-name>
        <servlet-class>net.servlet.control_transfer.IncludableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncludableServlet</servlet-name>
        <url-pattern>/includable</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>XMLConfigServlet</servlet-name>
        <servlet-class>net.servlet.configuration.XMLConfigServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>XMLConfigServlet</servlet-name>
        <url-pattern>/xml</url-pattern>
    </servlet-mapping>
    <!--Servlets configurations -->

    <!--Filters-->
    <filter>
        <filter-name>XMLConfigFilter</filter-name>
        <filter-class>net.filter.XMLConfigFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XMLConfigFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--Filters-->

    <!--Settings-->
    <!--Поддержка сессии только с помощью cookie!-->
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <!--Settings-->
</web-app>

